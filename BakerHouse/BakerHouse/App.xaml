<?xml version="1.0" encoding="utf-8" ?> 
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BakerHouse.App">
    <Application.Resources>
        <ResourceDictionary>


            <Color x:Key="MainColor">#E91E63</Color>

            <Style TargetType="Button" BaseResourceKey="MainButton">
                <Setter Property="BackgroundColor" Value="#E91E63" />
                <Setter Property="TextColor">White</Setter>
                <Setter Property="CornerRadius" Value="24" />
            </Style>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#E91E63" />
            </Style>





        </ResourceDictionary>
    </Application.Resources>
</Application>